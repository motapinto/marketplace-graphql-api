{
  "name": "api-rlf",
  "version": "1.0.0",
  "description": "GraphQL API for a online marketplace",
  "main": "dist/server.js",
  "scripts": {
    "start": "nodemon .",
    "dev": "node --inspect=5858 -r ts-node/register ./src/server.ts",
    "populate": "node -r ts-node/register ./src/database/script.ts",
    "prod": "node .",
    "prod:ci": "npm run populate && npm run prod ",
    "build": "rm -rf dist && tsc --module commonjs",
    "test:dev": "npm run build && npm run test",
    "test": "mocha --timeout 18000 dist/tests/integration/buyers.test.js && mocha --timeout 18000 dist/tests/integration/carts.test.js && mocha --timeout 18000 dist/tests/integration/orders.test.js && mocha --timeout 18000 dist/tests/integration/categories.test.js && mocha --timeout 18000 dist/tests/integration/producers.test.js && mocha --timeout 18000 dist/tests/integration/products.test.js && mocha --timeout 18000 dist/tests/integration/reviews.test.js && mocha --timeout 18000 dist/tests/integration/users.test.js --exit",
    "lint": "eslint 'src/**'",
    "lint:security": "eslint --no-eslintrc -c .eslint-security.json 'src/**'",
    "lint-fix": "eslint --fix 'src/**'",
    "graphdoc": "wait-on tcp:5000 && graphdoc -e http://localhost:5000/graphql -o ./doc --force"
  },
  "devDependencies": {
    "@types/arangodb": "^3.5.8",
    "@types/chai": "^4.2.14",
    "@types/express": "^4.17.8",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.5",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "apollo-server-testing": "^2.18.2",
    "chai": "^4.2.0",
    "chai-sorted": "^0.2.0",
    "class-validator": "^0.12.2",
    "eslint": "^7.11.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-scanjs": "^1.0.0-beta4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-security": "^1.4.0",
    "graphql-tools": "^6.2.4",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "wait-on": "^5.2.1"
  },
  "dependencies": {
    "@2fd/graphdoc": "^2.4.0",
    "apollo-server-express": "^2.18.2",
    "arangojs": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.11.0",
    "graphql": "^15.3.0",
    "type-graphql": "^1.1.0"
  }
}
